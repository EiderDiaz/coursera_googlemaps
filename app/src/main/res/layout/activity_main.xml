<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.eider.coursera_googlemaps.MainActivity">


    <TextView
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="SELECCIONA UN LUGAR" />
    <ImageView
        android:id="@+id/playa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/road"
        android:layout_alignStart="@+id/road"
        android:layout_alignTop="@+id/cerro"
        android:src="@drawable/beach"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="105dp" />

    <ImageView
        android:id="@+id/road"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/parque"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:src="@drawable/road"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="105dp" />

    <ImageView
        android:id="@+id/cerro"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/parque"
        android:layout_alignLeft="@+id/parque"
        android:layout_alignStart="@+id/parque"
        android:layout_marginBottom="55dp"
        android:src="@drawable/mountains"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="287dp" />

    <ImageView
        android:id="@+id/parque"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/valley"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="287dp" />

</RelativeLayout>
